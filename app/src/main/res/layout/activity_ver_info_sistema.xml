<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.james.planificador.GUI.VerInfoSistema">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/button2"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:text="Ver info del sistema"
            android:onClick="verInfo"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textViewCPU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CPU:"
            android:layout_weight="0.03" />

        <TextView
            android:id="@+id/textViewMemoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memoria"
            android:layout_weight="0.03" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bateria"
            android:layout_weight="0.03" />

        <TextView
            android:id="@+id/textViewSO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version SO"
            android:layout_weight="0.04" />

        <TextView
            android:id="@+id/textViewMemInt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text="% alm interno" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="% alm externo" />

    </LinearLayout>

</RelativeLayout>

