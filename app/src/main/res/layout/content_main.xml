<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.james.planificador.GUI.Main"
    tools:showIn="@layout/app_bar_main">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintRight_toRightOf="parent"
        map:layout_constraintLeft_toLeftOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fabPrincipal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="visible"
        app:menu_fab_label="Menú"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/map"
        app:layout_constraintRight_toRightOf="@+id/map">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/cambiar_estiloMapa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e6aaaa"
            android:src="@drawable/ic_cambiarestilo"
            app:backgroundTint="@android:color/background_light"
            app:fabSize="mini"
            app:fab_label="Cambiar estilo" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/agregarEvento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e6aaaa"
            android:src="@drawable/ic_addevent"
            app:backgroundTint="@android:color/background_light"
            app:fabSize="mini"
            app:fab_label="Agregar Evento" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/miUbicacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e6aaaa"
            android:src="@drawable/ic_miubicacion"
            app:backgroundTint="@android:color/background_light"
            app:fabSize="mini"
            app:fab_label="Mi ubicación" />

    </com.github.clans.fab.FloatingActionMenu>



</android.support.constraint.ConstraintLayout>